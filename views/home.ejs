<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Home</title>
    <%- include('partials/header'); -%>
  </head>
  <body>
    <h1>Home</h1>

    <p><%= startingContent%></p>


    <% posts.forEach(function(post){ %>
      <% console.log(post.title) %>
      <h1><%= post.title %></h1>
      <p><%= post.content.substring(0, 100)+"...." %><a href="/posts/<%= post.title %>">Read more</a></p>
    <% }); %>



  </body>
  <footer>
    <%- include('partials/footer'); -%>
  </footer>
</html>
